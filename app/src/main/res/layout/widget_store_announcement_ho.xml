<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:paddingVertical="16dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/textView"
        style="@style/Font_303133_16_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优惠"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_item"
        style="@style/Font_303133_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="满49减18；满78减30；满118减41；满158减53；满228减63"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/info_item2"
        style="@style/Font_303133_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="津贴随机减；叠加满减可再减3.8元"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_item" />

    <TextView
        android:id="@+id/info_item3"
        style="@style/Font_303133_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="神卷最高膨胀至20元，本店再加补贴3元"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_item2" />

    <TextView
        android:id="@+id/info_item4"
        style="@style/Font_303133_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="折扣商品5.06折起"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_item3" />

    <TextView
        android:id="@+id/info_item5"
        style="@style/Font_303133_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="满1元赠送图片+10字VX得3元1份"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_item4" />

    <TextView
        android:id="@+id/textView2"
        style="@style/Font_303133_16_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="公告"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_item5" />

    <TextView
        android:id="@+id/content"
        style="@style/Font_303133_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="疫情形式严峻，天气恶劣，物流运力不足，配送吃力。老铁，周末约"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.example.storedetaildemo.ui.widget.MNestedScrollViewBox xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true"
    tools:context=".ui.fragment.storedetail.MerchantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F6F7"
        android:orientation="vertical">

        <com.example.storedetaildemo.ui.widget.MerchantStoreIntroduceHo
            android:id="@+id/merchant_store_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/title_btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</com.example.storedetaildemo.ui.widget.MNestedScrollViewBox>